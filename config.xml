    <!--   <splash src="platforms/android/res/drawable-xhdpi/background.9.png" density="xhdpi" /> -->
    <!-- </platform> -->

    <platform name="android">
      <icon src="platforms/android/res/drawable-hdpi/appicon.png" density="hdpi" />
      <icon src="platforms/android/res/drawable-ldpi/appicon.png" density="ldpi" />
      <icon src="platforms/android/res/drawable-mdpi/appicon.png" density="mdpi" />
      <icon src="platforms/android/res/drawable-xhdpi/appicon.png" density="xhdpi" />
    </platform>


    <!-- <preference name="SplashScreen" value="platforms/android/res/drawable-hdpi/background.9.png "/> -->

