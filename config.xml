    <!-- <preference name="SplashScreen" value="foo" /> -->
    <!-- <preference name="SplashScreenDelay" value="3000" /> -->
    <!-- <preference name="SplashMaintainAspectRatio" value="true|false" /> -->
    <!-- <preference name="SplashShowOnlyFirstTime" value="true|false" /> -->

    <platform name="android">
      <splash src="platforms/android/res/drawable-hdpi/background.9.png" density="hdpi" />
      <splash src="platforms/android/res/drawable-ldpi/background.9.png" density="ldpi" />
      <splash src="platforms/android/res/drawable-mdpi/background.9.png" density="mdpi" />
      <splash src="platforms/android/res/drawable-xhdpi/background.9.png" density="xhdpi" />
    </platform>



    <preference name="SplashScreen" value="background"/>
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="20000"/>

    <preference name="FadeSplashScreen" value="true"/>
    <preference name="FadeSplashScreenDuration" value="1000"/>




</widget>
